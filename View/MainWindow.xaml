<Window x:Class="flightSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:m="clr-namespace:Microsoft.Maps.MapControl.WPF;assembly=Microsoft.Maps.MapControl.WPF"
        xmlns:Controls ="clr-namespace:flightSimulator.controls"
        xmlns:u="clr-namespace:flightSimulator.View.controls"
                xmlns:v="clr-namespace:flightSimulator.View.controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>



        <StackPanel Grid.Column="1" Margin="10">
            <v:DashBoard x:Name="dash" VerticalAlignment="Center" Margin="0,0,0.4,0"/>
            <v:Steering>
                
            </v:Steering>
        </StackPanel>



        <Viewbox Grid.Column="0"  StretchDirection="Both" Stretch="UniformToFill">
            
            <u:Map>
                
            </u:Map>
        </Viewbox>
        


    </Grid>
</Window>
