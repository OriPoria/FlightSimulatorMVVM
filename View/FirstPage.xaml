<Page x:Class="flightSimulator.View.FirstPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:flightSimulator.View"
        mc:Ignorable="d"
        Title="FirstPage" Height="450" Width="800">
    <Grid>
        <Grid>
            <Label Content="insert port" HorizontalAlignment="Left" Margin="138,110,0,0" VerticalAlignment="Top" Height="56" Width="169" FontSize="30"/>
            <TextBox x:Name="port_text_box" HorizontalAlignment="Left" Height="74" Margin="307,92,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="308" TextChanged="TextBox_TextChanged"/>
            <Label Content="insert ip" HorizontalAlignment="Left" Margin="138,271,0,0" VerticalAlignment="Top" Height="56" Width="169" FontSize="30"/>
            <TextBox x:Name="ip_textbox" HorizontalAlignment="Left" Height="74" Margin="307,253,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="308" TextChanged="TextBox_TextChanged"/>
            <Button x:Name="button1" Content="start" HorizontalAlignment="Left" Margin="340,345,0,0" VerticalAlignment="Top" Width="187" Height="53" Click="Button_Click" FontSize="30"/>

        </Grid>
    </Grid>
</Page>
