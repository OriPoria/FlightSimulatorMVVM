<UserControl x:Class="flightSimulator.View.controls.Steering"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:flightSimulator"
              xmlns:Controls ="clr-namespace:flightSimulator.controls"
              xmlns:v="clr-namespace:flightSimulator.View.controls"
                     xmlns:m="clr-namespace:Microsoft.Maps.MapControl.WPF;assembly=Microsoft.Maps.MapControl.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="440" d:DesignWidth="440">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="163*"/>
            <RowDefinition Height="277*"/>
        </Grid.RowDefinitions>


        <Slider x:Name="Slider_throttle" Minimum="-1" Maximum="1" HorizontalAlignment="Left" TickPlacement="TopLeft" TickFrequency="0.1" Width="178"    Margin="117,101.8,0,56" Grid.Row="1" />
        <TextBox x:Name="Throttle_text_box" HorizontalAlignment="Left" Margin="236,135.8,0,100" TextWrapping="Wrap" Text ="{Binding ElementName=Slider_throttle,Path=Value,Mode=OneWay}"  FontSize="25" Width="81"  RenderTransformOrigin="-1.011,0.536" Grid.Row="1"/>
        <Label Name="lable_throttle"  Content="Throttle" FontSize="25" HorizontalAlignment="Left" Height="41" Margin="117,135.8,0,0" VerticalAlignment="Top" Width="114" Grid.Row="1"/>

        <Viewbox Margin="0,-51,-55,150" Grid.RowSpan="2" >

            <Controls:UserControl1 Height="570" Width="678" RenderTransformOrigin="0.41,0.418"/>

        </Viewbox>
        <Slider x:Name="Aileron_rudder" Minimum="-1" Maximum="1" HorizontalAlignment="Left" TickPlacement="TopLeft" TickFrequency="0.1" Width="178"  Margin="54,68,0,253" RenderTransformOrigin="0.5,0.5" Grid.RowSpan="2" >
            <Slider.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-90.219"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Slider.RenderTransform>
        </Slider>
        <Label x:Name="lable_Aileron"  Content="Aileron" FontSize="25" HorizontalAlignment="Left" Height="41" Margin="-15,91,0,0" VerticalAlignment="Top" Width="114" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="90.103"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <TextBox x:Name="Aileron_rudder_text_box" HorizontalAlignment="Left" Margin="19,159,0,231" TextWrapping="Wrap" Text ="{Binding Value, ElementName=Aileron_rudder, Mode=OneWay}"  FontSize="25" Width="54"  RenderTransformOrigin="-1.011,0.536" Grid.RowSpan="2">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.354"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Label x:Name="Rudder_label"  Content="Rudder" FontSize="25" HorizontalAlignment="Left" Height="41" Margin="316,49.8,0,0" VerticalAlignment="Top" Width="114" Grid.Row="1"/>
        <TextBox x:Name="Rudder_text_box" HorizontalAlignment="Left" Margin="316,90.8,0,145" TextWrapping="Wrap" Text ="0"  FontSize="25" Width="81"  RenderTransformOrigin="-1.011,0.536" Grid.Row="1"/>
        <Label x:Name="Elevator_label"  Content="Elevator" FontSize="25" HorizontalAlignment="Left" Height="38" Margin="10,69.8,0,0" VerticalAlignment="Top" Width="102" Grid.Row="1"/>
        <TextBox x:Name="Elevator_text_box" HorizontalAlignment="Left" Margin="10,107.8,0,128" TextWrapping="Wrap" Text ="0"  FontSize="25" Width="81"  RenderTransformOrigin="-1.011,0.536" Grid.Row="1"/>








    </Grid>
</UserControl>
