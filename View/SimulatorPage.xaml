<Page x:Class="flightSimulator.SimulatorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:Controls ="clr-namespace:flightSimulator.controls"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="800"
      Title="SimulatorPage">
    
    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="300"/>

        </Grid.RowDefinitions>


        <Viewbox Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Uniform">

            <Controls:UserControl1 x:Name="joystick"></Controls:UserControl1>


        </Viewbox>

        <Controls:Map x:Name="myMap" Grid.RowSpan="2"></Controls:Map>
        <TextBlock Text="{Binding Path=VM_latitude, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" HorizontalAlignment="Center" FontSize="40" Foreground="Beige"/>
        <ProgressBar Value="{Binding Path=VM_latitude, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Width="600" Height="30"/>






    </Grid>


</Page>
